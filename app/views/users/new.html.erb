<h1>Sign up</h1>

<p><%= link_to image_tag('sign_in_green.png', :id => 'sign-in-button'), '#', :id => 'sign-in' %> via Browser ID</p>

<p>OR</p>

<%= form_for @user do |f| %>
  <div><label>Email</label><%= f.text_field :email %></div>
  <div><label>Password</label><%= f.password_field :password %></div>
  <div><%= f.submit 'Sign up' %> or <%= link_to 'Log in', :new_session %></div>
<% end %>

<% content_for :bottom_script do %>
   <%= javascript_include_tag 'https://browserid.org/include.js' unless logged_in? %>
<% end %>